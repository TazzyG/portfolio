<section class="portfolio-1">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2> Projects </h2>
        <hr class="primary">    
      </div>
    </div>
    <div class="row">
      <% @projects.each_with_index do |project, index| %>
      <div class="col-sm-4 portfolio-item">
        <a href="#modal<%= index+1 %>" class="portfolio-link" data-toggle="modal">
          <div class="caption">
            <div class="caption-content">
              <h3>View Project </h3>
              <h4> <%= project.title %> </h4>
            </div>
          </div>
            <%= image_tag project.image.url %>
        </a>
       
      </div>
      <% end %>

    </div>
    
</section> 
<%= render "modals" %> 

