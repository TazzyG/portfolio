
  <div class = "container">       
    <div class= "row">
      <div class= "col-lg-12 text-center">
        <h2> Projects </h2>
        <h4 class= "text-light"> All but one is built with Ruby on Rails </h4>
        <hr class= "primary mb">
      </div>
    </div> 
    <div class= "row all_projects-row">
      <div class="col-md-12 projects">
        <% @projects.each_slice(2) do |projects| %> 
          <div class= "row project-row">
            <% projects.each do |project| %>
            
              <div class= "col-md-6 project_list" data-scrollreveal="enter bottom over 5s">
                <div class= "project img-responsive center"> 
                  <%= link_to project.link, target: 'blank' do %> 
                    <div class= "screen "> 
                        <%= image_tag project.image.url(:project) %> <br>
                    </div>
                    <div class= "keyboard " %>
                        <img src= "https://s3.ca-central-1.amazonaws.com/haathi/welcome/keyboard1.png">
                    </div>
                  <% end %>   
                </div>
                <div class = "text-center text-light ">
                  <%= project.title.humanize.gsub(/\b('?[a-z])/) { $1.capitalize } %><br>
                  <% if current_user %>
                    <div>
                      <%= link_to "Edit", edit_project_path(project) %> 
                      <%= link_to "Delete", project, method: :delete, data: {confirm: "Are You Sure?"} %>
                      <%= link_to "add a new project", new_project_path, class: 'btn btn-primary' %>
                    </div>
                 <% end %> 
                </div> 
              </div>
            
            <% end %> 

          </div>
        <% end %>
      </div>
    </div>
  </div>

