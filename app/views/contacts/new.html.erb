<% provide(:title, 'Contact Us') %>
<section>
<div id="contact" class="text-left">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div>
        <div>
          <h2>Hello</h2>
        </div>
        <div >
          <%= form_for(@contact) do |f| %>
            
           <div class="form-group">
             
              <%= f.text_field :name, autofocus: true, required: true, class: "form-control" , placeholder: "Name"%>
            </div>
            <div class="form-group">
            
              <%= f.email_field :email, autofocus: true, required:true, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">
             
              <%= f.text_area :message, autofocus: true, rows:3, required:true,  class: "form-control", placeholder: "Message" %>
            </div>

            <div class="form-group">
              
              <%= f.hidden_field :nickname, hint: "leave this part blank"%>
            </div>

           <div class="btn-group">
                <%= f.submit "Send Message", class: "btn btn-primary" %>
            </div>
          <% end %>
          </div>
          <div class= "text-center">
            <h3> I promise to get back to you very soon </h3>
            <%= image_tag('laurie.jpg', class: "img-circle")  %> 
          </div>
      </div>
    </div>
  </div>
</div>
</section>