<form name="sentMessage" id="contactForm" novalidate>  
  <%= form_for(Contact.new, html: { class: 'form-horizontal' }  ) do |f| %>   
    
    
      <div class="form-group  floating-label-form-group controls" >
        
        <%= f.text_field :name,  class: "form-control", placeholder: "Name", id: "name"%>
      </div>
    
   
      <div class="form-group  floating-label-form-group controls">
        
        <%= f.email_field :email,  class: "form-control", placeholder: "Email Address",  id: "email"%>
      </div>
    
    
      <div class="form-group  floating-label-form-group controls">
        
        <%= f.text_area :message,  rows:5, class: "form-control", placeholder: "Message", id: "message"%>
      </div>
    
    
    <div class="btn-group">
      <%= f.submit "Send", class: "btn btn-lg btn-primary btn-square btn-raised" %>
    </div>
<% end %>
</form>