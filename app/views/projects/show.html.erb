<% provide(:title, "Project" ) %>
<div class= "container text-left" id="new_showcase">
  <div class= "row">
    <div class= "col-md-8 col-offset-2">
      <div class= "panel panel-default">
        <div class= "panel-heading">
          <h1> <%= @project.title %></h1>
        </div>
        <div class= "panel-body">
         <p><%= image_tag @project.image_url %> </p>
         <p><%= @project.content %></p>
         <p>Tags: <%= raw @project.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')%>
        </div>
        <div class = "panel-footer">
          <%= link_to 'Edit', edit_project_path(@project) %> | 
          <%= link_to 'Delete', @project, method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </div>
    </div>
  </div>
</div>